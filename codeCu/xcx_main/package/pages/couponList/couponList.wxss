/**index.wxss**/

page {
    height: 100%;
    /* background:#e7e7e7; */
    background:#fff;
}


.tabs {
    padding: 0 50px;
}

.container {
    height: 100%;
    z-index: 9;
    background: #eee;
}


/* 返回顶部按钮 start*/

.backTop-box {
    position: fixed;
    bottom: 118rpx;
    right: -90rpx;
    width: 80rpx;
    height: 80rpx;
    z-index: 999;
    border-radius: 50%;
    background: url("http://fengsheng-image.oss-cn-shenzhen.aliyuncs.com/sys/top.png") no-repeat center center;
    background-size: 100%;
}

.backTop-box.show {
    animation: backTopShow 0.5s forwards;
}

@keyframes backTopShow {
    0% {
        right: -90rpx;
    }
    100% {
        right: 25rpx;
    }
}


/* 返回顶部按钮 end*/


/*
  优惠券列表 begin
*/

.coupon-list-box {
    padding: 20rpx 20rpx 0 20rpx;
}

.coupon-list {
    /* margin-bottom: 20rpx; */
    height: 182rpx;
    white-space: nowrap;

    position: relative;
}

.coupon-list .main-left {
    width: 225rpx;
    display: inline-block;
    height: 182rpx;
    /* line-height: 182rpx; */
    vertical-align: top;
    background-color: #db5443;
    color: #fff;
    /* background-image: url('http://fengsheng-image.oss-cn-shenzhen.aliyuncs.com/sys/ticket001.png'); */
    background-size: 10rpx 100%;
    background-position: 0 0;
    background-repeat: no-repeat;
    /* padding-left: 15rpx; */
    box-sizing: border-box;
    text-align: center;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}
.coupon-list .main-left.active0 {
    line-height: 182rpx;
}

.coupon-list .main-left .main-left-text{
margin-top: 30rpx;
}

.coupon-list .main-left .main-left-btn{

}

.coupon-list .main-left .main-left-text .font-ee-sm{
 margin-left:-10rpx;
}
.coupon-list .main-left .main-left-text .price {
    font-size: 45rpx;
}

.coupon-list .main-left .main-left-btn .btn-use {
    vertical-align:middle;
    padding:0 20rpx;
    border-radius:10rpx;
    border:1rpx solid #db5443;
    color:#db5443;
    height:60rpx;
    line-height:60rpx;
    background:#fff;
    display:inline-block;
    font-size: 30rpx;
}

.coupon-list .main-right {
    /* width: 460rpx; */
    width: 455rpx;
    display: inline-block;
    background: #fff;
    /* background:#e7e7e7; */
    border: 1rpx solid #ddd;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    height: 182rpx;
    vertical-align: top;
    padding-left: 30rpx;
    box-sizing: border-box;
    /* background-image: url('http://fengsheng-image.oss-cn-shenzhen.aliyuncs.com/sys/ticket002.png'); */
    background-size: 10rpx 100%;
    background-position: 475rpx 0;
    background-repeat: no-repeat;
    padding-right: 30rpx;
    /* font-size: 20rpx; */
}

.coupon-list .main-right .head {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx dotted #ddd;
    font-size: 28rpx;
    color:#000;
}

.coupon-list .main-right .end-time {
    height: 90rpx;
    /* line-height: 90rpx; */
    font-size: 22rpx;
}

.coupon-list .main-right .end-time .main-right-end-time-text1{
    float: left;
    width:100%;
    height: 45rpx;
    line-height: 45rpx;
}
.coupon-list .main-right .end-time .main-right-end-time-text2{
    float: left;
    width:100%;
    height: 45rpx;
    line-height: 45rpx;
}

.coupon-list .unsupport {
    position: absolute;
    width: 129rpx;
    height: 107rpx;
    right: 10rpx;
    top: 40rpx;
    background-size:100% 100%;
}

.coupon-list-box.empty .main-left {
    background-color: #ccc;
    /* background-image: url('http://fengsheng-image.oss-cn-shenzhen.aliyuncs.com/sys/ticket003.png'); */
    background-color: #ccc;
    background-size: 10rpx 100%;
    background-position: 0 0;
    background-repeat: no-repeat;
}

.coupon-list-box.empty .main-left .main-left-btn .btn-use {
    border: 1rpx solid #ccc;
    color: #ccc;
}

.coupon-list-box .empty-info {
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
    margin: 20rpx 0;
}

.coupon-list-box .coupon-desc{
    background: #f4f4f4;
    color: #666;
    padding: .3125rem 0 .3125rem .625rem;
    font-size: 23rpx;
    position: relative;
    margin-bottom: 20rpx;
}

.coupon-list-box .coupon-desc .toggle{
    position: absolute;
    top: .3125rem;
    right: .625rem;
    color: #4ba76c;
}

.coupon-list-box .coupon-desc.desc-expanding{
    height: auto;
}
.coupon-list-box .coupon-desc.desc-collapsing{
    overflow: hidden;
    height: 25rpx;
}




/*
  优惠券列表 end
*/

.more-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    background: #3fb67f;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}